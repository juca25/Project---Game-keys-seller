<div style="background: #6a11cb">
    <div class="row justify-content-center">

        <div class="col-md-4">
            <h1>Edición de usuario</h1>
            <br>
            <hr>
            <br>
            <form action="/profile/{{_id}}" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input value="{{username}}" type="text" class="form-control" name="username">
                </div>
                <div class="form-group">
                    <label for="username">Cambiar Email</label>
                    <input value="{{email}}" type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label for="username">Cambiar contraseña</label>
                    <input value="" type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-dark btn-block">Editar</button>
                <form action="/user/delete/{{_id}}"></form>
                <button type="submit" class="btn btn-dark btn-block"><a href="/user/delete/{{_id}}">Borrar
                        cuenta</a></button>
            </form>
            </form>
            <hr>
        </div>
        <div class="col-md-4">
            <h1>Edición de juegos</h1>
            <br>
            <hr>
            <br>
            <form action="/profile/{{_id}}" method="POST">
                <div class="form-group">
                    <label for="username">Title</label>
                    <input type="text" class="form-control" name="title">
                </div>

                <button type="submit" class="btn btn-dark btn-block"><a href="/user/games/created-game-view">Tus
                        ofertas</a></button>
                <button type="submit" class="btn btn-dark btn-block"><a href="/user/data">Tus
                        juegos favoritos</a></button>
            </form>
            </form>
            <hr>
        </div>
    </div>
</div>
