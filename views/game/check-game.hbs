<div class="vh-100 mt-5" style="background: #6a11cb">
    <div class="d-flex flex-wrap justify-content-center ">
        {{#each list}}
        <div class="card my-5 mx-5" style="width: 300px;">
            <img src="{{thumb}}" class="card-img-top" alt="...">
            <div class="card-body text-center">
                <h4 class="card-title">{{title}}</h4>
                <p class="card-text">Juego vendido por:
                    <br>{{name}}
                </p>
                <p class="card-text">Antes: {{retailPrice}}$</p>
                <p class="card-text">Descuento: {{savings}}%</p>
                <h6 class="card-text">Precio final: {{price}}$</h6>
                <a href="https://www.cheapshark.com/redirect?dealID={{dealID}}" class="btn btn-primary">Comprar</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>